<mvc:View xmlns:mvc="sap.ui.core.mvc"
 xmlns:semantic="sap.f.semantic"
  controllerName="tasa.com.preciosacopio.controller.App"
   xmlns="sap.ui.table"
    xmlns:m="sap.m"
	 xmlns:form="sap.ui.layout.form"
	  xmlns:core="sap.ui.core"
	   xmlns:layout="sap.ui.layout">
	   
	<m:Shell id="shell" appWidthLimited="false">
		<m:App id="app">
		<semantic:SemanticPage>

		<semantic:titleHeading>
			<m:Title
				text="{i18n>Precios de Acopio}"
				level="H2"/>
		</semantic:titleHeading>

		<semantic:headerContent >
            <form:Form width="100%" editable="true">
                <form:title>
                    <core:Title text="Datos de selección" level="Auto" icon="sap-icon://filter"/>
                </form:title>
                
                <form:formContainers>
                    <form:FormContainer>
                        <form:formElements>
                             <form:FormElement>
								<form:label>
									<m:Label text="Planta" design="Bold" width="100%" required="false" textAlign="Begin" textDirection="Inherit"/>
								</form:label>
								<form:fields>
									<m:Input  change="multiInputPlanta" class="sapUiSmallMarginBottom"
										id="idPlantaIni"
										width="100%"
										placeholder="Ingresar Planta..."
										showSuggestion="true"
										showValueHelp="false"
										valueState="Information"
										valueStateText="Ingrese un texto"
										suggestionRows="{Planta>/listaPlanta}">
										<m:suggestionColumns>
											
											<m:Column
												hAlign="Begin"
												popinDisplay="Inline"
												demandPopin="true"
												minScreenWidth="Tablet">
												<m:Label text="Centro"/>
											</m:Column>
											<m:Column
												hAlign="End"
												popinDisplay="Inline"
												demandPopin="true"
												minScreenWidth="Tablet">
												<m:Label text="Planta"/>
											</m:Column>
											<m:Column
												hAlign="End"
												popinDisplay="Inline"
												demandPopin="true"
												minScreenWidth="Tablet">
												<m:Label text="Descripción"/>
											</m:Column>
										</m:suggestionColumns>
										<m:suggestionRows>
											<m:ColumnListItem>
											<m:cells>
												<m:Label text="{Planta>WERKS}"/>
												<m:Label text="{Planta>CDPTA}"/>
												<m:Label text="{Planta>DESCR}"/>
												<m:Label text="{
														parts:[{path:'Planta'},{path:'Centro'}],
														type: 'sap.ui.model.type.Currency',
														formatOptions: {showMeasure: true}
														}"/>
											</m:cells>
											</m:ColumnListItem>
										</m:suggestionRows>
									</m:Input>
										<!-- <m:Input  change="multiInputPlanta" class="sapUiSmallMarginBottom"
											id="idPlantaFin"
											width="100%"
											placeholder="Ingresar Planta..."
											showSuggestion="true"
											showValueHelp="false"
											valueState="Information"
											valueStateText="Ingrese un texto"
											suggestionRows="{Planta>/listaPlanta}">
											<m:suggestionColumns>
												
												<m:Column
													hAlign="Begin"
													popinDisplay="Inline"
													demandPopin="true"
													minScreenWidth="Tablet">
													<m:Label text="Centro"/>
												</m:Column>
												<m:Column
													hAlign="End"
													popinDisplay="Inline"
													demandPopin="true"
													minScreenWidth="Tablet">
													<m:Label text="Planta"/>
												</m:Column>
												<m:Column
													hAlign="End"
													popinDisplay="Inline"
													demandPopin="true"
													minScreenWidth="Tablet">
													<m:Label text="Descripción"/>
												</m:Column>
											</m:suggestionColumns>
											<m:suggestionRows>
												<m:ColumnListItem>
												<m:cells>
													<m:Label text="{Planta>WERKS}"/>
													<m:Label text="{Planta>CDPTA}"/>
													<m:Label text="{Planta>DESCR}"/>
													<m:Label text="{
															parts:[{path:'Planta'},{path:'Descripcion'}],
															type: 'sap.ui.model.type.Currency',
															formatOptions: {showMeasure: true}
															}"/>
												</m:cells>
												</m:ColumnListItem>
											</m:suggestionRows>
										</m:Input> -->
                                </form:fields>
                             </form:FormElement>
							<form:FormElement>
								<form:label>
									<m:Label text="Armador Empresa" design="Bold" width="100%" required="false" textAlign="Begin" textDirection="Inherit"/>
								</form:label>
								<form:fields>
								<m:Input id="idArmadorIni_R" 
								showValueHelp="true"
								valueHelpOnly="true"
								valueHelpRequest="onShowSearchTrip"/>	
								<m:Input id="idArmadorFin_R" 
								showValueHelp="true"
								valueHelpOnly="true"
								valueHelpRequest="onShowSearchTrip"/>
								<!-- <m:Input type="Text" id="idArmadorIni" showValueHelp="true" enabled="true" width="100%" valueHelpOnly="false" required="false" valueStateText="Invalid entry" maxLength="0" valueHelpRequest="_onOpenDialogArmador('popOne')"/>			 -->
								<!-- <m:Input type="Text" id="idArmadorFin" showValueHelp="true" enabled="true" width="100%" valueHelpOnly="false" required="false" valueStateText="Invalid entry" maxLength="0" valueHelpRequest="_onOpenDialogArmador('popTwo')"/>			 -->
								</form:fields>
							</form:FormElement>
                            <form:FormElement>
								<form:label>
									<m:Label text="Embarcaciones" design="Bold" width="100%" required="false" textAlign="Begin" textDirection="Inherit"/>
								</form:label>
								<form:fields>
									<m:Input id="inputId0_R" placeholder="Seleccione embarcación" showValueHelp="true" valueHelpOnly="true"  valueHelpRequest="onShowEmbarcaciones"/>
									<m:Input id="inputId1_R" placeholder="Seleccione embarcación" showValueHelp="true" valueHelpOnly="true"  valueHelpRequest="onShowEmbarcaciones"/>
								</form:fields>
                            </form:FormElement>
                        </form:formElements>
                    </form:FormContainer>
					<form:FormContainer >
						<form:formElements>
							<form:FormElement>
                                <form:label>
                                    <m:Label text="Fecha Producción" design="Bold" width="100%" required="false" textAlign="Begin" textDirection="Inherit"/>
                                </form:label>
                                <form:fields>
									<m:DatePicker id="fechaInicio" width="auto" displayFormat="dd/MM/yyyy" required="false" valueStateText="Invalid entry" enabled="true" valueFormat="dd/MM/yyyy"/>
                                	<m:DatePicker id="fechaFin" width="auto" displayFormat="dd/MM/yyyy" required="false" valueStateText="Invalid entry" enabled="true" valueFormat="dd/MM/yyyy"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement>
                                <form:label>
                                    <m:Label text="Estado" design="Bold" width="100%" required="false" textAlign="Begin" textDirection="Inherit"/>
                                </form:label>
                                <form:fields>
                                    <m:ComboBox editable="true" selectedKey="C" id="idEstado" items="{precio>/ZDO_PRECIO}" enabled="true" width="auto" valueState="None" maxWidth="100%">
                                        <m:items>
                                                        <core:Item text="{precio>descripcion}" enabled="true" key="{precio>id}"/>
                                        </m:items>
                                    </m:ComboBox>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement>
                                <form:label>
                                    <m:Label text="Cant. de Aciertos" design="Bold" width="100%" required="false" textAlign="Begin" textDirection="Inherit"/>
                                </form:label>
                                <form:fields>
                                    <m:Input type="Number" id="idAciertos" showValueHelp="false" enabled="true" width="auto" valueHelpOnly="false" required="false" valueStateText="Invalid entry" maxLength="0"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement>
                                <form:label>
                                    <m:Label text="" design="Bold" width="100%" required="false" textAlign="Begin" textDirection="Inherit"/>
                                </form:label>
                                <form:fields>
                                    
									<m:Button text="Buscar" tooltip="Buscar" type="Emphasized" icon="sap-icon://search" iconFirst="true" width="100%" enabled="true" iconDensityAware="false"
                                                   press="loadTablaPreciosAcopio"/>
                                                   <m:Button text="Limpiar" tooltip="Limpiar"  icon="sap-icon://clear-filter" iconFirst="true" width="100%" enabled="true" iconDensityAware="false"
                                                   press="limpiarFiltros"/>
                                </form:fields>
                            </form:FormElement>
						</form:formElements>
					</form:FormContainer>
                </form:formContainers>
                <form:layout>
					<form:ResponsiveGridLayout
						labelSpanXL="3"
						labelSpanL="3"
						labelSpanM="4"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="0"
						emptySpanL="0"
						emptySpanM="0"
						emptySpanS="0"
						columnsXL="2"
						columnsL="2"
						columnsM="1"
						singleContainerFullSize="false"  />
				</form:layout>
            </form:Form>
		</semantic:headerContent>
		<semantic:content>
            <!-- <ScrollContainer horizontal="true" vertical="true" width="100%" height="194.375px"> -->
             <Table
				id="table"
				rows="{
					path:'Acopio>/listaPrecio'
				}"
				rowSelectionChange="onSelectionChange"
				visibleRowCount="7"
                selectionMode="None"
				showColumnVisibilityMenu="{ui>/showVisibilityMenuEntry}"
				enableColumnFreeze="{ui>/showFreezeMenuEntry}"
				enableCellFilter="true"
				columnSelect="onColumnSelect"
				cellContextmenu="onProductIdCellContextMenu"
				ariaLabelledBy="title"
				fixedColumnCount="6"
				class="classTable sapUiSizeCompact">

				<extension>
					<m:OverflowToolbar style="Clear">
						<m:Title id="title" text="Lista de registros: 0"/>
						<m:ToolbarSpacer/>
						
                          <m:Button icon="sap-icon://edit" press="editarMasivo" text="Editar" tooltip="Editar" type="Accept"/> 
						  <m:Button icon="sap-icon://excel-attachment" press="onExportarExcelData" text="Exportar" tooltip="Exportar Excel" type="Accept"/>
						<m:ToolbarSeparator/>
						<m:SearchField
							placeholder="Búsqueda rápida"
							value="{ui>/globalFilter}"
							liveChange="onSearch"
							width="15rem"/>
					</m:OverflowToolbar>
				</extension>
				<columns>
					<!--Se quita la columna editar temporalmente por pruebas-->
                	<!-- <Column
						id="edit"
						width="11rem"
						sortProperty="edit"
						filterProperty="edit"
						showFilterMenuEntry="true"
						showSortMenuEntry="true">
						<m:Label text="" />
						<template>
						<m:Button icon="sap-icon://edit" text="Editar" press="editRow"/> 
						</template>
					</Column> -->
					<Column	width="4rem" hAlign="Begin">
						<m:CheckBox 
							select="onSelectAllCheckBox"
							selected="{Acopio>/selectedAllCheckBox}"
							partiallySelected="{Acopio>/partiallySelected}"
							enabled="{Acopio>/enabledCheckboxAll}" />
						<template>
							<m:CheckBox 
								id="idCheckBox" 
								enabled="{Acopio>STATUS}"
								selected="{Acopio>selectedRow}"
								select="onSelectCheckBox"/>
						</template>
					</Column>
					<Column
						id="NMEMB"
						width="9rem"
						sortProperty="NMEMB"
						filterProperty="NMEMB"
						showFilterMenuEntry="true"
						showSortMenuEntry="true">
						<m:Label text="Embarcación" />
						<template>
							<m:Text text="{Acopio>NMEMB}" wrapping="false" />
						</template>
					</Column>
                    <Column
						id="FECCONMOV"
						width="5rem"
						sortProperty="FECCONMOV"
						filterProperty="FECCONMOV"
						showFilterMenuEntry="true"
						showSortMenuEntry="true">
						<m:Label text="Fecha prod." />
						<template>
							<m:Text text="{path:'Acopio>FECCONMOV'}" wrapping="false" />
						</template>
					</Column>                    
                    <Column
						id="PRCMX"
						width="4rem"
						sortProperty="PRCMX"
						filterProperty="PRCMX"
						showFilterMenuEntry="true"
						showSortMenuEntry="true"
						hAlign="End">
						<m:Label text="Max." 
						/>
						<template>
							<!--<m:Text text="{Acopio>PRCMX}" wrapping="false" />-->
							<m:Text text="{path:'Acopio>PRCMX', type:'sap.ui.model.type.Float',
												formatOptions:{
													style: 'short',
													decimals: 2,
													shortDecimals: 2,
													groupingSeparator: ',',
													decimalSeparator: '.'
												}}" wrapping="false"/>
						</template>
					</Column>
                    <Column
						id="PRCTP2"
						width="4rem"
						sortProperty="PRCTP"
						filterProperty="PRCTP"
						showFilterMenuEntry="true"
						showSortMenuEntry="true"
						hAlign="End">
						<m:Label text="Tope"
						 />
						<template>
							<!--<m:Text text="{Acopio>PRCTP}" wrapping="false" />-->
							<m:Text text="{path:'Acopio>PRCTP', type:'sap.ui.model.type.Float',
												formatOptions:{
													style: 'short',
													decimals: 2,
													shortDecimals: 2,
													groupingSeparator: ',',
													decimalSeparator: '.'
												}}" wrapping="false"/>
						</template>
					</Column>
					<Column
						id="CALIDA"
						width="8rem"
						sortProperty="CALIDA"
						filterProperty="CALIDA"
						showFilterMenuEntry="true"
						showSortMenuEntry="true">
						<m:Label text="Calidad" />
						<template>
							<!-- <m:Text  text="{path:'Acopio>CALIDA',formatter:'.formatter.disabledItems'}" wrapping="false" /> -->
							<m:Text  text="{Acopio>DESC_CALIDAD}" wrapping="false" />
						</template>
					</Column> 
                	<Column
						id="NRMAR"
						width="5rem"
						sortProperty="NRMAR"
						filterProperty="NRMAR"
						showFilterMenuEntry="true"
						showSortMenuEntry="true">
						<m:Label text="Marea" />
						<template>
							<m:Text text="{Acopio>NRMAR}" wrapping="false" />
						</template>
					</Column>
                    <Column
						id="NRDES"
						width="5.5rem"
						sortProperty="NRDES"
						filterProperty="NRDES"
						showFilterMenuEntry="true"
						showSortMenuEntry="true">
						<m:Label text="Nro descarga" />
						<template>
							<m:Text text="{Acopio>NRDES}" wrapping="false" />
						</template>
					</Column>
                    <Column
						id="DESCR"
						width="5rem"
							sortProperty="DESCR"
							filterProperty="DESCR"
							showFilterMenuEntry="true"
							showSortMenuEntry="true">
						<m:Label text="Planta" />
						<template>
							<m:Text text="{Acopio>DESCR}" wrapping="false" />
						</template>
					</Column>
                    <Column
						id="CDSPC"
						width="9rem"
						sortProperty="CDSPC"
						filterProperty="CDSPC"
						showFilterMenuEntry="true"
						showSortMenuEntry="true"
                        visible="false">
						<m:Label text="Planta" />
						<template>
							<m:Text text="{Acopio>CDSPC}" wrapping="false" />
						</template>
					</Column>
                    
                    <Column
						id="FIDES"
						width="7.5rem"
						sortProperty="FIDES"
						filterProperty="FIDES"
						showFilterMenuEntry="true"
						showSortMenuEntry="true">
						<m:Label text="Fecha/hora inic. desc." />
						<template>
							<m:Text text="{path:'Acopio>FIDES'}
                                    {path:'Acopio>HIDES'}" wrapping="false" />
						</template>
					</Column>
                    <Column
						id="FFDES"
						width="7rem"
						sortProperty="FFDES"
						filterProperty="FFDES"
						showFilterMenuEntry="true"
						showSortMenuEntry="true">
						<m:Label text="Fecha/hora fin desc." />
						<template>
							<m:Text text="{path:'Acopio>FFDES'}
                                    {path:'Acopio>HFDES'}"  wrapping="false" />
						</template>
					</Column>
                    <Column
						id="CNPDS"
						width="6rem"
						sortProperty="CNPDS"
						filterProperty="CNPDS"
						showFilterMenuEntry="true"
						showSortMenuEntry="true"
						hAlign="End">
						<m:Label text="Cant. desc. (Tn)" />
						<template>
							<!--<m:Text text="{Acopio>CNPDS}" wrapping="false" />-->
							<m:Text text="{path:'Acopio>CNPDS', type:'sap.ui.model.type.Float',
												formatOptions:{
													minIntegerDigits:1,
													minFractionDigits:3,
													maxFractionDigits:3,
													groupingEnabled:true,
													groupingSeparator: ',',
													decimalSeparator: '.'
												}}" wrapping="false"/>
						</template>
					</Column>
					  <Column
						id="MREMB"
						width="5.5rem"
						sortProperty="MREMB"
						filterProperty="MREMB"
						showFilterMenuEntry="true"
						showSortMenuEntry="true">
						<m:Label text="Matrícula" />
						<template>
							<m:Text text="{Acopio>MREMB}" wrapping="false" />
						</template>
					</Column>
                    <Column
						id="NAME1"
						width="11rem"
						sortProperty="NAME1"
						filterProperty="NAME1"
						showFilterMenuEntry="true"
						showSortMenuEntry="true">
						<m:Label text="Armador comercial" />
						<template>
							<m:Text text="{Acopio>NAME1}" wrapping="false" />
						</template>
					</Column>
                    <Column
						id="PRCTP"
						width="4rem"
						sortProperty="PRCTP"
						filterProperty="PRCTP"
						showFilterMenuEntry="true"
						showSortMenuEntry="true"
						hAlign="End">
						<m:Label text="Pactado" />
						<template>
							<!--<m:Text text="{Acopio>PRCOM}" wrapping="false" />-->
							<m:Text text="{path:'Acopio>PRCOM', type:'sap.ui.model.type.Float',
												formatOptions:{
													style: 'short',
													decimals: 2,
													shortDecimals: 2,
													groupingSeparator: ',',
													decimalSeparator: '.'
												}}" wrapping="false"/>
						</template>
					</Column>
                    <Column
						id="BONIF"
						width="3rem"
						sortProperty="BONIF"
						filterProperty="BONIF"
						showFilterMenuEntry="true"
						showSortMenuEntry="true"
						hAlign="End">
						<m:Label text="Bonif." 
						/>
						<template>
							<!--<m:Text text="{Acopio>BONIF}" wrapping="false" />-->
								<m:Text text="{path:'Acopio>BONIF', type:'sap.ui.model.type.Float',
												formatOptions:{
													style: 'short',
													decimals: 2,
													shortDecimals: 2,
													groupingSeparator: ',',
													decimalSeparator: '.'
												}}" wrapping="false"/>
						</template>
					</Column>
                    <Column
						id="DESC_WAERS"
						width="6rem"
						sortProperty="DESC_WAERS"
						filterProperty="DESC_WAERS"
						showFilterMenuEntry="true"
						showSortMenuEntry="true">
						<m:Label text="Moneda" />
						<template>
							<m:Text text="{Acopio>DESC_WAERS}" wrapping="false" />
						</template>
					</Column>
                    <Column
						id="ESPRC"
						width="4rem"
						sortProperty="ESPRC"
						filterProperty="ESPRC"
						showFilterMenuEntry="true"
						showSortMenuEntry="true">
						<m:Label text="Estado" />
						<template>
							<m:Text text="{Acopio>DESC_ESPRC}" wrapping="false" />
						</template>
					</Column>
                    <Column
						id="DSSPC"
						width="5.5rem"
						sortProperty="DSSPC"
						filterProperty="DSSPC"
						showFilterMenuEntry="true"
						showSortMenuEntry="true">
						<m:Label text="Especie" />
						<template>
							<m:Text text="{Acopio>DSSPC}" wrapping="false" />
						</template>
					</Column>
                    
					<!--Columnas-->

				</columns>
				<footer>
					<m:OverflowToolbar id="infobar">

                    </m:OverflowToolbar>
				</footer>
				<rowSettingsTemplate>
					<RowSettings highlight="{=${Acopio>DESC_CALIDA}===''?'Error':'Success'}" />
				</rowSettingsTemplate>
				
			</Table>

		</semantic:content>

	</semantic:SemanticPage>
        
		</m:App>
	</m:Shell>
</mvc:View>
